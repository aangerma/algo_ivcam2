/*****************************************************************************

                                    iostream

    C++ compatible header file.  essentially copied from the Standard.

    $Id: iostream,v 1.3 2005-06-15 22:55:13 deg Exp $

*****************************************************************************/

#ifndef _IOSTREAM
#define _IOSTREAM

#include <ios>
#include <istream>
#include <ostream>

extern "C++" {

namespace std {

extern istream cin;
extern ostream cout;
extern ostream cerr;
extern ostream clog;

extern wistream wcin;
extern wostream wcout;
extern wostream wcerr;
extern wostream wclog;


} // namespace std

} // extern "C++"

#endif // _IOSTREAM
